.menu
	display block
	background transparent
	font-size 0
	&__item
		display inline-block
		border 1px solid #ddd
		border-right none
		font-size 18px
	&:last-child
		border-right 1px solid #ddd
	&-title
		cursor pointer
		display block
		color #999
		font-size 18px
		height 50px
		line-height 50px
		padding 0 10px
		&:hover
			color #777
		&:active
			color #777
		&:visited
			color #777
		&:link
			color #777
		&:focus
		  color #777
		&:hover
			color #777