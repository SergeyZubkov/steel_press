.slider-projects
	display block
	.slick-list
		margin-left -8px
		margin-right -8px
	.slick-slide img 
		margin 0 auto
	&__item
		position relative
		&:after
			content '+'
			display block
			background alpha(color-yellow, .85)
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			color #fff
			text-align center
			line-height 275px
			font-size 30px
			width 50%
			height 50%
			transition .4s
			opacity 0
		&:hover:after
			width 100%
			height 100%
			opacity 1
	.slick-arrow
		position absolute
		top -120px
		background transparent
		border 1px solid dasty-gray
		color transparent
		font-size 0
		size(40px)
		&.slick-prev
			right 45px
			&:after
				content '<'
				color dasty-gray
				font-size 20px
		&.slick-next
			right 5px
			&:after
				content '>'
				color dasty-gray
				font-size 20px