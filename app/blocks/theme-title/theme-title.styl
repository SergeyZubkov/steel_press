.theme-title
	display block
	font-size 30px
	font-weight 700
	text-transform uppercase
	margin-bottom 25px
	position relative
	padding-left 20px
	font-family Raleway
	color #333
	&:before
		content ''
		position absolute
		display block
		top 50%
		left 0
		border 3px solid alpha(color-yellow, .3)
		width 190px
		height 50px
		transform translateY(-50%)
		z-index -1
	&_color-white
		color white
