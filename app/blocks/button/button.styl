.button
	background color-yellow
	color #000
	display inline-block
	font-size 15px
	font-weight bold
	padding 20px 35px
	position relative
	text-transform uppercase
	transition .2s
	z-index 1
	text-decoration none
	&:before 
		background color-blue
		content ''
		height 103%
		left 0
		margin-top -1px
		position absolute
		top 0
		transition all .3s ease
		width 0
		z-index -1
	&:hover
		color #fff
		&:before
			width 100% 
	&_white
		background #fff
	&_border
		border 2px solid #ddd
		&:hover
			border 2px solid color-blue
	&_hover-white:hover
		color color-blue
		&.button:before
			background #fff

		
	